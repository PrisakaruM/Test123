<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="210dip" />
            <gradient android:angle="-90" android:startColor="#12F8F8F8" android:endColor="#0E010B" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="210dip" />
            <solid android:color="#C401070F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="210dip" />
            <gradient android:angle="-90" android:startColor="#F3ECEC" android:endColor="#12F8F8F8" />
        </shape>
    </item>
</selector>